<div class='pt-10 sm:mx-32'>
  <%= f.label :store_name %>
  <label class='input flex items-center gap-2'>
    <%= f.text_field :store_name, class:'w-full', placeholder:'どこかのたこ焼き屋さん' %>
  </label>
</div>

<div class='pt-10 sm:mx-32'>
  <%= f.label :introduction %>
  <label class='flex'>
  <%= f.text_area :introduction, class:'textarea h-24 w-full resize-none text-base', placeholder:'大きなタコが入っていて美味しかった' %>
  </label>
</div>

<div class='pt-10 sm:mx-32'>
  <%= f.label :address %>
  <label class='input flex items-center gap-2'>
    <%= f.text_field :address %>
  </label>
</div>

<div class='pt-10 sm:mx-32'>
  <%= f.label :site_url %>
  <label class='input  flex items-center gap-2'>
    <%= f.url_field :site_url %>
  </label>
</div>

<div class='pt-10 mb-5 sm:mx-32'>
  <%= f.label :image %>
  <div class='flex'>
    <%= f.file_field :image, class: 'w-full, file-input border-none custom-file-input' %>
  </div>
  <div class='border-t border-gray-600 sm:mx-32 opacity-25 border-dotted'></div>
</div>
